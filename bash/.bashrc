#------------------------------------------------------------------------------#
#	Aliases
#------------------------------------------------------------------------------#

# Navigation
alias c="clear"
alias ll="lsd -la"
alias ls="lsd -ll"
alias cat="bat"
alias cd="z"
alias lg="lazygit"

# Git
alias pull="git pull origin"
alias push="git push origin"
alias commit="git commit -m"
alias add="git add"
alias branch="git branch"
alias checkout="git checkout"

# File Access
alias bconf="nvim ~/.bashrc"

# Editors
alias v="nvim"
alias e="emacs"
alias n="nano"

#------------------------------------------------------------------------------#
#	Eval
#------------------------------------------------------------------------------#

# starship
eval "$(starship init bash)"

# fzf
eval "$(fzf --bash)"

# zoxide
eval "$(zoxide init bash)"
